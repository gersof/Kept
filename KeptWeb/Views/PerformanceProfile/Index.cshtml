
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 1em;">
	<div class="row">
		<div class="pull-left" style="border:solid; border-color:orangered">
			<img id="img_sex" class="person-img" style="width:240px; height:240px;"
				  src="https://pbs.twimg.com/profile_images/961238719268257792/QAE3SnEi_400x400.jpg">
		</div>
		<div class="pull-right" style="width:40%;">
			<h1 style="text-align:center">Motivation</h1>
			<fieldset class="form-horizontal">
				<div class="form-group ">
					<label class="col-form-label col-sm-2">Team</label>
					<div class="middle">
						<div class="bar-container">
							<div class="bar-5"></div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="bar1" class="col-form-label col-sm-2">Client</label>
					<div class="middle">
						<div class="bar-container">
							<div class="bar-4"></div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-2">Project</label>
					<div class="middle">
						<div class="bar-container">
							<div class="bar-3"></div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-2">Company</label>
					<div class="middle">
						<div class="bar-container">
							<div class="bar-2"></div>
						</div>
					</div>
				</div>
			</fieldset>
		</div>
		<fieldset class="form-horizontal">
			<div style="padding:10px">
				<div class="form-group">
					<label for="fullName" class="col-form-label col-sm-3">Full Name</label>
					<input type="text" class="form-control col-sm-6" id="fullName" placeholder="Enter Full Name" required>
				</div>
				<div class="form-group">
					<label for="deliveryUnit" class="col-form-label col-sm-3">Delivery Unit</label>
					<input type="text" class="form-control col-sm-6" id="tel" placeholder="Enter Delivery Unit" required>
				</div>
				<div class="form-group">
					<label for="grade" class="col-form-label col-sm-3">Grade</label>
					<input type="text" class="form-control col-sm-6" id="tel" placeholder="Enter Grade" required>
				</div>
				<div class="form-group">
					<label for="lead" class="col-form-label col-sm-3">Lead</label>
					<input type="text" class="form-control col-sm-6" id="tel" placeholder="Enter Lead" required>
				</div>
				<div class="form-group">
					<label for="leadGrade" class="col-form-label col-sm-3">Lead Grade</label>
					<input type="text" class="form-control col-sm-6" id="tel" placeholder="Enter Lead grade" required>
				</div>
			</div>
		</fieldset>
	</div>
	<hr style="border-color:orange" />
	<div class="row">
		<div class="pull-left" style="width:50%">
			<h1 class="card-title" style="text-align:center">Competencies</h1>
			<fieldset class="form-horizontal">
				<div class="form-group ">
					<label class="col-form-label col-sm-5">Customer Management</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Flexibility</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Team Work</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Result Orientation</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Leadership</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Learning Capability</label>
				</div>
			</fieldset>
		</div>
		<div class="pull-right" style="width:50%">
			<h1 class="card-title" style="text-align:center">Performance</h1>
			<fieldset class="form-horizontal">
				<div class="form-group ">
					<label class="col-form-label col-sm-5">Technical Knowledge and Quality</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Production Process and Methodology</label>
				</div>
				<div class="form-group">
					<label class="col-form-label col-sm-5">Productivity</label>
				</div>
			</fieldset>
		</div>
	</div>
</div>
