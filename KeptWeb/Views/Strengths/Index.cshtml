@model KeptWeb.Models.StrengthsByEmployee
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th {
            background-color: black;
            color: white
        }

        th, td {
            padding: 15px;
            text-align: center;
        }

            td#tdLeft {
                text-align: left;
                padding: 15px;
            }

        table#tableMain {
            width: 100%;
            background-color: white;
        }
    </style>
    <h2>Strenghts</h2>
    <table id="tableMain">
        <tr>
            <th width="70%">Description</th>
        </tr>
        @foreach (var st in Model.Strengths)
        {
            <tr>
                <td id="tdLeft">@st.Description</td>
            </tr>
        }
    </table>

